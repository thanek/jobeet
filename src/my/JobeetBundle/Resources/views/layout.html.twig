{% extends "::base.html.twig" %}

{% block stylesheets %}
    {% stylesheets output='assets/css/*.css'
    '@myJobeetBundle/Resources/public/css/main.css'%}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
    <div id="container">
        <div id="header">
            <div class="content">
                <h1><a href="{{ path('job') }}">
                        <img src="{{ asset('images/logo.jpg') }}" alt="Jobeet Job Board"/>
                    </a></h1>

                <div id="sub_header">
                    <div class="post">
                        <h2>Ask for people</h2>

                        <div>
                            <a href="{{ path('job') }}">Post a Job</a>
                        </div>
                    </div>

                    <div class="search">
                        <h2>Ask for a job</h2>

                        <form action="" method="get">
                            <input type="text" name="keywords" id="search_keywords"/>
                            <input type="submit" value="search"/>

                            <div class="help">
                                Enter some keywords (city, country, position, ...)
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div id="content">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash_notice">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="flash_error">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <div class="content">
                {% block content %}
                {% endblock %}
            </div>
        </div>

        <div id="footer">
            <div class="content">
          <span class="symfony">
            <img src="{{ asset('images/jobeet-mini.png') }}"/>
            powered by <a href="/">
                  <img src="{{ asset('images/symfony.gif') }}" alt="symfony framework"/>
              </a>
          </span>
                <ul>
                    <li><a href="">About Jobeet</a></li>
                    <li class="feed"><a href="">Full feed</a></li>
                    <li><a href="">Jobeet API</a></li>
                    <li class="last"><a href="">Affiliates</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}