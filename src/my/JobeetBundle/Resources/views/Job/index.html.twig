{% extends 'myJobeetBundle::layout.html.twig' %}

{% block stylesheets -%}
    {% stylesheets output='assets/css/*.css'
    '@myJobeetBundle/Resources/public/css/main.css'
    '@myJobeetBundle/Resources/public/css/jobs.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all"/>
    {% endstylesheets %}
{% endblock %}


{% block content %}
    <div id="jobs">
        <table class="jobs">
            {% set i=0 %}
            {% for job in entities %}
                {% set i=i+1 %}
                <tr class="{{ cycle(['odd', 'even'], i) }}">
                    <td class="location">{{ job.location }}</td>
                    <td class="position">
                        <a href="{{ path('job_show', { 'id': job.id }) }}">
                            {{ job.position }}
                        </a>
                    </td>
                    <td class="company">{{ job.company }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
